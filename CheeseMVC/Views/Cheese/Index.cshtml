
@model List<CheeseMVC.Models.Cheese>

<h1>My Cheese</h1>



@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}
<p><a asp-controller="Cheese" asp-action="Add"><button type="button">Add Cheese</button></a></p>

<form method="post">
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Rating</th>
        </tr>

    
    @foreach (var cheese in Model)
    {
        <tr>
            <td><input type="checkbox" name="cheeses" value="@cheese.CheeseId"/>&nbsp @cheese.Name &nbsp
            <a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.CheeseId">edit</a></td>
            <td>@cheese.Description</td>
            <td>@cheese.Type</td>
            <td>@cheese.Rating</td>
            
        </tr>
    }
    </table>
    <input type="submit" value="Remove Cheese" />
    
</form>

