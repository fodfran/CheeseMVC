@model CheeseMVC.Models.Cheese

<h1>Edit Cheese @ViewBag.cheese.Name (@ViewBag.cheese.CheeseId)</h1>

<form method="post">
    <div class="form-group">
        <label>Name: <input class="form-control" type="text" name="name" value="@ViewBag.cheese.Name"/></label>
        <p style="color: red">@ViewBag.error</p>
    </div>
    <div class="form-group">
        <label>Description: <input class="form-control" type="text" name="description" value="@ViewBag.cheese.Description"/></label>
    </div>
    
    <input type="hidden" value="@ViewBag.cheese.CheeseId" name="id" />
    <input type="submit" value="Edit Cheese" />
</form>

